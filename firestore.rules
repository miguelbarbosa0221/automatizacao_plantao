
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getProfile(userId) {
      return get(/databases/$(database)/documents/users/$(userId)/profile/profileDoc).data;
    }

    function isMemberOf(companyId) {
      let profile = getProfile(request.auth.uid);
      // Verifica se o ID da empresa está na lista de empresas do perfil
      return isSignedIn() && profile.companies.filter(c => c.id == companyId).size() > 0;
    }

    function isAdminOf(companyId) {
      let profile = getProfile(request.auth.uid);
      let companyEntry = profile.companies.filter(c => c.id == companyId);
      return isSignedIn() && companyEntry.size() > 0 && companyEntry[0].role == 'admin';
    }

    // Perfil do Usuário
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow create: if isSignedIn();
      
      match /{allPaths=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // Dados da Empresa
    match /companies/{companyId} {
      allow read: if isMemberOf(companyId);
      allow write: if isAdminOf(companyId);

      match /categories/{categoryId} {
        allow read: if isMemberOf(companyId);
        allow write: if isAdminOf(companyId);
      }

      match /units/{unitId} {
        allow read: if isMemberOf(companyId);
        allow write: if isAdminOf(companyId);
      }

      match /demands/{demandId} {
        allow read: if isMemberOf(companyId);
        allow create: if isMemberOf(companyId);
        allow update, delete: if isMemberOf(companyId) && (resource.data.userId == request.auth.uid || isAdminOf(companyId));
      }
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
