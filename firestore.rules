
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Função de verificação de membro ultra-resiliente
    function isMemberOf(companyId) {
      let profile = get(/databases/$(database)/documents/users/$(request.auth.uid)/profile/profileDoc).data;
      return isSignedIn() && profile != null && 
             (profile.activeCompanyId == companyId || 
              (profile.companies != null && profile.companies.filter(c => c.id == companyId).size() > 0));
    }

    // Função de verificação de administrador ultra-resiliente
    function isAdminOf(companyId) {
      let profile = get(/databases/$(database)/documents/users/$(request.auth.uid)/profile/profileDoc).data;
      return isSignedIn() && profile != null && profile.companies != null && 
             profile.companies.filter(c => c.id == companyId && c.role == 'admin').size() > 0;
    }

    // Perfil do Usuário: Dono tem acesso total e regras claras
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      match /profile/profileDoc {
        allow read, write: if isOwner(userId);
      }

      match /{allPaths=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // Dados da Empresa: Proteção por hierarquia e participação
    match /companies/{companyId} {
      allow read: if isSignedIn() && isMemberOf(companyId);
      // Apenas administradores podem modificar a raiz da empresa ou configurações
      allow write: if isSignedIn() && isAdminOf(companyId);

      match /categories/{categoryId} {
        allow read: if isSignedIn() && isMemberOf(companyId);
        allow write: if isSignedIn() && isAdminOf(companyId);
      }

      match /units/{unitId} {
        allow read: if isSignedIn() && isMemberOf(companyId);
        allow write: if isSignedIn() && isAdminOf(companyId);
      }

      match /demands/{demandId} {
        allow read: if isSignedIn() && isMemberOf(companyId);
        allow create: if isSignedIn() && isMemberOf(companyId);
        allow update, delete: if isSignedIn() && (isAdminOf(companyId) || (isMemberOf(companyId) && resource.data.userId == request.auth.uid));
      }
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
