
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Verifica se o usuário é membro da empresa consultando o perfil
    function isMemberOf(companyId) {
      let profilePath = /databases/$(database)/documents/users/$(request.auth.uid)/profile/profileDoc;
      return isSignedIn() && exists(profilePath) && 
             (get(profilePath).data.activeCompanyId == companyId || 
              (get(profilePath).data.companies != null && get(profilePath).data.companies.filter(c => c.id == companyId).size() > 0));
    }

    // Verifica se o usuário é administrador da empresa consultando o perfil
    function isAdminOf(companyId) {
      let profilePath = /databases/$(database)/documents/users/$(request.auth.uid)/profile/profileDoc;
      return isSignedIn() && exists(profilePath) && 
             get(profilePath).data.companies != null && 
             get(profilePath).data.companies.filter(c => c.id == companyId && c.role == 'admin').size() > 0;
    }

    // Perfil do Usuário
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      match /profile/profileDoc {
        allow read, write: if isOwner(userId);
      }

      match /{allPaths=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // Dados da Empresa
    match /companies/{companyId} {
      allow read: if isSignedIn() && isMemberOf(companyId);
      allow create: if isSignedIn(); // Permite criar a empresa inicial
      allow update, delete: if isSignedIn() && isAdminOf(companyId);

      match /categories/{categoryId} {
        allow read: if isSignedIn() && isMemberOf(companyId);
        allow write: if isSignedIn() && isAdminOf(companyId);
      }

      match /units/{unitId} {
        allow read: if isSignedIn() && isMemberOf(companyId);
        allow write: if isSignedIn() && isAdminOf(companyId);
      }

      match /demands/{demandId} {
        allow read: if isSignedIn() && isMemberOf(companyId);
        allow create: if isSignedIn() && isMemberOf(companyId);
        allow update, delete: if isSignedIn() && (isAdminOf(companyId) || (isMemberOf(companyId) && resource.data.userId == request.auth.uid));
      }
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
