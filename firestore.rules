
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Função simplificada para verificar se o usuário é membro de uma empresa
    // Acessa diretamente o perfil do usuário logado
    function isMemberOf(companyId) {
      let profile = get(/databases/$(database)/documents/users/$(request.auth.uid)/profile/profileDoc).data;
      return isSignedIn() && profile != null && 
             (profile.activeCompanyId == companyId || 
              profile.companies.filter(c => c.id == companyId).size() > 0);
    }

    // Função simplificada para verificar se o usuário é administrador de uma empresa
    function isAdminOf(companyId) {
      let profile = get(/databases/$(database)/documents/users/$(request.auth.uid)/profile/profileDoc).data;
      let companyEntry = profile.companies.filter(c => c.id == companyId);
      return isSignedIn() && companyEntry.size() > 0 && companyEntry[0].role == 'admin';
    }

    // Perfil do Usuário: Dono tem acesso total
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      match /profile/profileDoc {
        allow read, write: if isOwner(userId);
      }

      match /{allPaths=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // Dados da Empresa: Protegido por participação e papel
    match /companies/{companyId} {
      // Permite leitura se for membro
      allow read: if isSignedIn() && isMemberOf(companyId);
      // Permite escrita se for administrador
      allow write: if isSignedIn() && isAdminOf(companyId);

      match /categories/{categoryId} {
        allow read: if isSignedIn() && isMemberOf(companyId);
        allow write: if isSignedIn() && isAdminOf(companyId);
      }

      match /units/{unitId} {
        allow read: if isSignedIn() && isMemberOf(companyId);
        allow write: if isSignedIn() && isAdminOf(companyId);
      }

      match /demands/{demandId} {
        allow read: if isSignedIn() && isMemberOf(companyId);
        allow create: if isSignedIn() && isMemberOf(companyId);
        allow update, delete: if isSignedIn() && isMemberOf(companyId) && (resource.data.userId == request.auth.uid || isAdminOf(companyId));
      }
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
