
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getRole(userId) {
      // O perfil é armazenado em /users/{userId}/profile/profileDoc
      return get(/databases/$(database)/documents/users/$(userId)/profile/profileDoc).data.role;
    }

    function isAdmin(userId) {
      return isSignedIn() && (getRole(userId) == 'admin');
    }

    // Coleções Privadas por Usuário
    match /users/{userId} {
      allow get, create: if isOwner(userId);
      
      match /profile/{docId} {
        allow read, write: if isOwner(userId);
      }

      match /demands/{demandId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Coleções Globais da Organização (Configurações)
    match /categories/{categoryId} {
      allow read: if isSignedIn();
      allow write: if isAdmin(request.auth.uid);
    }
    
    match /units/{unitId} {
      allow read: if isSignedIn();
      allow write: if isAdmin(request.auth.uid);
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
