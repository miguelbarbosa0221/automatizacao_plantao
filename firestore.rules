
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)/profile/profileDoc).data.role;
    }

    function isAdmin(userId) {
      return isOwner(userId) && (getRole(userId) == 'admin');
    }

    match /users/{userId} {
      allow get, create: if isOwner(userId);
      
      match /profile/{docId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }

      match /demands/{demandId} {
        allow read, write: if isOwner(userId);
      }
      
      match /categories/{categoryId} {
        allow read: if isOwner(userId);
        allow write: if isAdmin(userId);
      }
      
      match /units/{unitId} {
        allow read: if isOwner(userId);
        allow write: if isAdmin(userId);
      }
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
