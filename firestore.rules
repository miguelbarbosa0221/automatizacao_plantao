rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regra global de segurança (ajuste conforme necessário para produção)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Regras específicas para empresas (garantindo acesso explícito)
    match /companies/{companyId} {
      allow read, write: if request.auth != null;
      
      // Permitir acesso às subcoleções (como settings, demands, etc)
      match /{document=**} {
        allow read, write: if request.auth != null;
      }
    }
    
    // Regras para usuários
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}