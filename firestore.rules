
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Obtém o documento de perfil de forma segura
    function getProfile(userId) {
      let profilePath = /databases/$(database)/documents/users/$(userId)/profile/profileDoc;
      return exists(profilePath) ? get(profilePath).data : null;
    }

    // Verifica se o usuário é membro da empresa no perfil
    function isMemberOf(companyId) {
      let profile = getProfile(request.auth.uid);
      return isSignedIn() && profile != null && 
             (profile.activeCompanyId == companyId || 
              (profile.companies != null && profile.companies.filter(c => c.id == companyId).size() > 0));
    }

    // Verifica se o usuário é administrador da empresa no perfil
    function isAdminOf(companyId) {
      let profile = getProfile(request.auth.uid);
      return isSignedIn() && profile != null && 
             profile.companies != null && 
             profile.companies.filter(c => c.id == companyId && c.role == 'admin').size() > 0;
    }

    // Perfil do Usuário: Acesso total ao próprio diretório
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      match /{allPaths=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // Dados da Empresa: Proteção baseada em associação no perfil
    match /companies/{companyId} {
      allow read: if isSignedIn() && (isMemberOf(companyId) || isAdminOf(companyId));
      allow create: if isSignedIn(); // Permite criar a empresa inicial no onboarding
      allow update, delete: if isSignedIn() && isAdminOf(companyId);

      match /categories/{categoryId} {
        allow read: if isSignedIn() && isMemberOf(companyId);
        allow write: if isSignedIn() && isAdminOf(companyId);
      }

      match /units/{unitId} {
        allow read: if isSignedIn() && isMemberOf(companyId);
        allow write: if isSignedIn() && isAdminOf(companyId);
      }

      match /demands/{demandId} {
        allow read: if isSignedIn() && isMemberOf(companyId);
        allow create: if isSignedIn() && isMemberOf(companyId);
        allow update, delete: if isSignedIn() && (isAdminOf(companyId) || (isMemberOf(companyId) && resource.data.userId == request.auth.uid));
      }
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
