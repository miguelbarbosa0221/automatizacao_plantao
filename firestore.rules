// Regras versão 2
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Exigir login para qualquer acesso
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Users e subcoleções (como profile)
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;

      match /profile/{docId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Companies e suas subcoleções
    match /companies/{companyId} {
      allow read, write: if request.auth != null;

      match /{sub=**} {
        allow read, write: if request.auth != null;
      }
    }
  }
}