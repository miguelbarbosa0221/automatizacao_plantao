
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getProfileData(userId) {
      let path = /databases/$(database)/documents/users/$(userId)/profile/profileDoc;
      return exists(path) ? get(path).data : null;
    }

    function isMemberOf(companyId) {
      let data = getProfileData(request.auth.uid);
      return isSignedIn() && data != null && 
             data.keys().contains('companies') &&
             data.companies.filter(c => c.id == companyId).size() > 0;
    }

    function isAdminOf(companyId) {
      let data = getProfileData(request.auth.uid);
      if (!isSignedIn() || data == null || !data.keys().contains('companies')) return false;
      let companyEntry = data.companies.filter(c => c.id == companyId);
      return companyEntry.size() > 0 && companyEntry[0].role == 'admin';
    }

    // Perfil do Usu√°rio
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow create: if isSignedIn();
      
      match /{allPaths=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // Dados da Empresa
    match /companies/{companyId} {
      allow read: if isMemberOf(companyId);
      allow write: if isAdminOf(companyId);

      match /categories/{categoryId} {
        allow read: if isMemberOf(companyId);
        allow write: if isAdminOf(companyId);
      }

      match /units/{unitId} {
        allow read: if isMemberOf(companyId);
        allow write: if isAdminOf(companyId);
      }

      match /demands/{demandId} {
        allow read: if isMemberOf(companyId);
        allow create: if isMemberOf(companyId);
        allow update, delete: if isMemberOf(companyId) && (resource.data.userId == request.auth.uid || isAdminOf(companyId));
      }
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
