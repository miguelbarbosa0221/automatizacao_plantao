
{
  "entities": {
    "Demand": {
      "title": "Demand",
      "type": "object",
      "description": "Chamado de suporte vinculado diretamente ao usu치rio.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "resolution": { "type": "string" },
        "category": { "type": "string" },
        "subcategory": { "type": "string" },
        "item": { "type": "string" },
        "unit": { "type": "string" },
        "sector": { "type": "string" },
        "source": { "type": "string", "enum": ["structured", "free-text"] }
      },
      "required": ["id", "userId", "timestamp", "title", "description", "source"]
    },
    "CatalogItem": {
      "title": "CatalogItem",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "active": { "type": "boolean" },
        "parentId": { "type": "string", "description": "ID do item pai, se aplic치vel (ex: categoria de uma subcategoria)" }
      },
      "required": ["id", "name", "active"]
    },
    "Profile": {
      "title": "Profile",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string" },
        "displayName": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["uid", "email"]
    }
  },
  "auth": {
    "providers": ["password", "google"]
  },
  "firestore": {
    "/users/{userId}/profile/profileDoc": {
      "schema": "#/backend/entities/Profile",
      "description": "Perfil pessoal do usu치rio."
    },
    "/users/{userId}/categories/{id}": {
      "schema": "#/backend/entities/CatalogItem",
      "description": "Categorias pessoais."
    },
    "/users/{userId}/subcategories/{id}": {
      "schema": "#/backend/entities/CatalogItem",
      "description": "Subcategorias pessoais."
    },
    "/users/{userId}/items/{id}": {
      "schema": "#/backend/entities/CatalogItem",
      "description": "Itens de hardware/software pessoais."
    },
    "/users/{userId}/units/{id}": {
      "schema": "#/backend/entities/CatalogItem",
      "description": "Unidades de atendimento pessoais."
    },
    "/users/{userId}/sectors/{id}": {
      "schema": "#/backend/entities/CatalogItem",
      "description": "Setores internos pessoais."
    },
    "/users/{userId}/demands/{demandId}": {
      "schema": "#/backend/entities/Demand",
      "description": "Chamados pessoais do usu치rio."
    }
  }
}
