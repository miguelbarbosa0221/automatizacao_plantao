
{
  "entities": {
    "Demand": {
      "title": "Demand",
      "type": "object",
      "description": "Chamado de suporte vinculado diretamente ao usuário.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "resolution": { "type": "string" },
        "categoryName": { "type": "string" },
        "subcategoryName": { "type": "string" },
        "itemName": { "type": "string" },
        "unitName": { "type": "string" },
        "sectorName": { "type": "string" },
        "categoryId": { "type": "string" },
        "subcategoryId": { "type": "string" },
        "itemId": { "type": "string" },
        "unitId": { "type": "string" },
        "sectorId": { "type": "string" },
        "source": { "type": "string", "enum": ["structured", "free-text"] }
      },
      "required": ["id", "userId", "timestamp", "title", "description", "source"]
    },
    "CatalogItem": {
      "title": "CatalogItem",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "parentId": { "type": "string", "description": "ID do item pai (ex: Unidade para Setor, Categoria para Subcategoria)" },
        "active": { "type": "boolean" }
      },
      "required": ["id", "name", "active"]
    },
    "Profile": {
      "title": "Profile",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string" },
        "displayName": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["uid", "email"]
    }
  },
  "auth": {
    "providers": ["password", "google"]
  },
  "firestore": {
    "/users/{userId}/profile/profileDoc": {
      "schema": "#/backend/entities/Profile",
      "description": "Perfil pessoal do usuário."
    },
    "/users/{userId}/units/{id}": {
      "schema": "#/backend/entities/CatalogItem",
      "description": "Unidades."
    },
    "/users/{userId}/sectors/{id}": {
      "schema": "#/backend/entities/CatalogItem",
      "description": "Setores (Filho de Unidade)."
    },
    "/users/{userId}/categories/{id}": {
      "schema": "#/backend/entities/CatalogItem",
      "description": "Categorias."
    },
    "/users/{userId}/subcategories/{id}": {
      "schema": "#/backend/entities/CatalogItem",
      "description": "Subcategorias (Filha de Categoria)."
    },
    "/users/{userId}/items/{id}": {
      "schema": "#/backend/entities/CatalogItem",
      "description": "Itens (Filho de Subcategoria)."
    },
    "/users/{userId}/demands/{demandId}": {
      "schema": "#/backend/entities/Demand",
      "description": "Chamados pessoais."
    }
  }
}
