
{
  "entities": {
    "Demand": {
      "title": "Demand",
      "type": "object",
      "description": "Chamado de suporte vinculado diretamente ao usuário.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "resolution": { "type": "string" },
        "category": { "type": "string" },
        "subcategory": { "type": "string" },
        "item": { "type": "string" },
        "unit": { "type": "string" },
        "sector": { "type": "string" },
        "source": { "type": "string", "enum": ["structured", "free-text"] }
      },
      "required": ["id", "userId", "timestamp", "title", "description", "source"]
    },
    "Category": {
      "title": "Category",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "active": { "type": "boolean" }
      },
      "required": ["id", "name", "active"]
    },
    "Unit": {
      "title": "Unit",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "active": { "type": "boolean" }
      },
      "required": ["id", "name", "active"]
    },
    "Profile": {
      "title": "Profile",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string" },
        "displayName": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["uid", "email"]
    }
  },
  "auth": {
    "providers": ["password", "google"]
  },
  "firestore": {
    "/users/{userId}/profile/profileDoc": {
      "schema": "#/backend/entities/Profile",
      "description": "Perfil pessoal do usuário."
    },
    "/users/{userId}/categories/{categoryId}": {
      "schema": "#/backend/entities/Category",
      "description": "Categorias pessoais do usuário."
    },
    "/users/{userId}/units/{unitId}": {
      "schema": "#/backend/entities/Unit",
      "description": "Unidades pessoais do usuário."
    },
    "/users/{userId}/demands/{demandId}": {
      "schema": "#/backend/entities/Demand",
      "description": "Chamados pessoais do usuário."
    }
  }
}
