
{
  "entities": {
    "Demand": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Demand",
      "type": "object",
      "description": "Representa um chamado de suporte de TI.",
      "properties": {
        "id": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "resolution": { "type": "string" },
        "category": { "type": "string" },
        "subcategory": { "type": "string" },
        "item": { "type": "string" },
        "source": { "type": "string", "enum": ["structured", "free-text"] }
      },
      "required": ["id", "timestamp", "title", "description", "resolution", "source"]
    },
    "Category": {
      "title": "Category",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "subcategories": { 
          "type": "array", 
          "items": { 
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "items": { "type": "array", "items": { "type": "string" } }
            }
          } 
        },
        "active": { "type": "boolean" }
      },
      "required": ["id", "name", "subcategories", "active"]
    },
    "Unit": {
      "title": "Unit",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "sectors": { "type": "array", "items": { "type": "string" } },
        "active": { "type": "boolean" }
      },
      "required": ["id", "name", "sectors", "active"]
    },
    "Profile": {
      "title": "Profile",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "role": { "type": "string", "enum": ["admin", "user"] },
        "email": { "type": "string" },
        "displayName": { "type": "string" }
      },
      "required": ["uid", "role"]
    }
  },
  "auth": {
    "providers": ["password", "google"]
  },
  "firestore": {
    "/users/{userId}/profile": {
      "schema": "#/backend/entities/Profile",
      "description": "Perfil e permissões do usuário."
    },
    "/users/{userId}/demands/{demandId}": {
      "schema": "#/backend/entities/Demand",
      "description": "Histórico de chamados do usuário."
    },
    "/users/{userId}/categories/{categoryId}": {
      "schema": "#/backend/entities/Category",
      "description": "Categorias personalizadas do usuário."
    },
    "/users/{userId}/units/{unitId}": {
      "schema": "#/backend/entities/Unit",
      "description": "Unidades e setores personalizados do usuário."
    }
  }
}
