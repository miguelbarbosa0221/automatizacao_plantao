
{
  "entities": {
    "Company": {
      "title": "Company",
      "type": "object",
      "description": "Representa uma organização/cliente do sistema.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "active": { "type": "boolean" }
      },
      "required": ["id", "name", "active"]
    },
    "Demand": {
      "title": "Demand",
      "type": "object",
      "description": "Chamado de suporte vinculado a uma empresa.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "resolution": { "type": "string" },
        "category": { "type": "string" },
        "subcategory": { "type": "string" },
        "item": { "type": "string" },
        "source": { "type": "string", "enum": ["structured", "free-text"] }
      },
      "required": ["id", "userId", "timestamp", "title", "description", "resolution", "source"]
    },
    "Category": {
      "title": "Category",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "subcategories": { 
          "type": "array", 
          "items": { 
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "items": { "type": "array", "items": { "type": "string" } }
            }
          } 
        },
        "active": { "type": "boolean" }
      },
      "required": ["id", "name", "subcategories", "active"]
    },
    "Unit": {
      "title": "Unit",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "sectors": { "type": "array", "items": { "type": "string" } },
        "active": { "type": "boolean" }
      },
      "required": ["id", "name", "sectors", "active"]
    },
    "Profile": {
      "title": "Profile",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string" },
        "displayName": { "type": "string" },
        "activeCompanyId": { "type": "string" },
        "companies": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "role": { "type": "string", "enum": ["admin", "user"] },
              "name": { "type": "string" }
            }
          }
        }
      },
      "required": ["uid", "companies"]
    }
  },
  "auth": {
    "providers": ["password", "google"]
  },
  "firestore": {
    "/users/{userId}/profile/profileDoc": {
      "schema": "#/backend/entities/Profile",
      "description": "Perfil do usuário com lista de empresas e empresa ativa."
    },
    "/companies/{companyId}": {
      "schema": "#/backend/entities/Company",
      "description": "Dados da empresa."
    },
    "/companies/{companyId}/categories/{categoryId}": {
      "schema": "#/backend/entities/Category",
      "description": "Categorias específicas da empresa."
    },
    "/companies/{companyId}/units/{unitId}": {
      "schema": "#/backend/entities/Unit",
      "description": "Unidades específicas da empresa."
    },
    "/companies/{companyId}/demands/{demandId}": {
      "schema": "#/backend/entities/Demand",
      "description": "Chamados vinculados à empresa."
    }
  }
}
